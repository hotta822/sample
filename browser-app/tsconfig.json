{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ES2015",
    "esModuleInterop": true, //外部ライブラリのimportの記述の統一
    "strict": true, //型チェックをデフォルトより厳しくする
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
